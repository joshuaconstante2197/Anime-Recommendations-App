<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">Create a New Comment for <%=anime.name%></h1>
		<div style="width: 30%; margin:35px auto;">
			<form action="/animes/<%=anime._id%>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="Comment Away">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">Submit Please!</button>
				</div>
			</form>
			<a href="/animes">View all Animes</a>
		</div>	
	</div>
</div>
<%- include ("../partials/footer") %>