<%- include ("partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">Edit the info of the <%=anime.name%> Campground</h1>
		<div style="width: 30%; margin:35px auto;">
			<form action="/animes/<%=anime._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Name</label>
					<input class="form-control" value="<%=anime.name%>" type="text" name="anime[name]" placeholder="name">
				</div>
				<div class="form-group">
					<label>Image</label>
					<input class="form-control" value="<%=anime.image%>" type="text" name="anime[image]" placeholder="image link">
				</div>
				<div class="form-group">
					<label>Description</label>
					<textarea class="form-control" type="text" name="anime[description]"  rows="4" cols="10" wrap="soft"><%=anime.description%> </textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-success btn-block">Submit Please!</button>
				</div>
			</form>
			<a href="/animes/<%=anime._id%>">View all Campgrounds</a>
		</div>	
	</div>
</div>

<%- include ("partials/footer") %>